<div class="container mt-3">
  <h1>Restaurant Overview</h1>

    <div class="cards">
      <% @restaurants.each do |restaurant| %>
        <div class="card-category col-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/320/240/<%=restaurant.category%>+cuisine)">
          <%= restaurant.name %>
          <%= link_to '', restaurant_path(restaurant), class: 'card-link' %>
        </div>
      <%end%>
    </div>

</div>
